//*****EN-TÊTE DECLARATIF*****
#include <Servo.h>  // on inclut la bibliothèque pour piloter un servomoteur
#include <math.h>
// on crée l'objet monServo
Servo poignet;
Servo coude;
Servo epaule;
//
//longueurs en cm de l epaule au coude et du coude au poignet
const float le=4,5, lc=9,5; 
//coordonnées du stylo
float x, y; 
//Angle de départ de l'épaule et du coude
float anglE=50;
float angleC=50;



//////////////////////////////////////////////////////
void setup()
{
//configure les 3 servomoteurs
    coude.attach(9,0,180); 
    epaule.attach(10,0,180);
    poignet.attach(8,0,180);  
    Serial.begin(9600);

}
void lever(){ //permet de lever le stylo
  poignet.write(80);
  delay(500);  
 }

 void baisser(){//permet de baisser le stylo
  poignet.write(120);
  delay(500);
 }


void loop()
{
    for (int position = 0; position <=180; position ++){ // on crée une variable position qui prend des valeurs entre 0 à 180 degrés
        coude.write(position);  // le bras du servomoteur prend la position de la variable position
        epaule.write(position);
        poignet.write(position);
        delay(15);  // on attend 15 millisecondes
    }

    for (int position = 180; position >=0; position --){ // cette fois la variable position passe de 180 à 0°
        coude.write(position);  // le bras du servomoteur prend la position de la variable position
        epaule.write(position);
        poignet.write(position);  // le bras du servomoteur prend la position de la variable position
        delay(15);  // le bras du servomoteur prend la position de la variable position
    }
 void goTO
 void lever(){ //permet de lever le stylo
  poignet.write(1500);
  delay(500);  
 }

 void baisser(){//permet de baisser le stylo
  poignet.write(1700);
  delay(500);
 }
}
